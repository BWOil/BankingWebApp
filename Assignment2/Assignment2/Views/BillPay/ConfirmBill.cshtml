@model Assignment2.Models.BillPay

@{
    ViewData["Title"] = "Confirm Bill Payment";
}

<div class="border-style border-corner">
    <h3 class="display-6 md-5 account-heading border-corner center-heading">@ViewData["Title"]</h3>

    <form asp-controller="BillPay" asp-action="SubmitBill" method="post">
        @Html.AntiForgeryToken()

        @Html.HiddenFor(model => model.AccountNumber)
        @Html.HiddenFor(model => model.PayeeID)
        @Html.HiddenFor(model => model.Amount)
        @Html.HiddenFor(model => model.ScheduleTimeUtc)
        @Html.HiddenFor(model => model.Period)
        @Html.HiddenFor(model => model.Status)

        <p>Please confirm your bill payment:</p>

        <div><strong>Account Number:</strong> @Model.AccountNumber</div>
        <div><strong>Payee:</strong> @(Model.Payee?.Name ?? "Not available")</div>
        <div><strong>Amount:</strong> @Model.Amount.ToString("C")</div>
        <div><strong>Schedule Date:</strong> @Model.ScheduleTimeUtc.ToString("g")</div>
        <div><strong>Payment Period:</strong> @Model.Period.ToString()</div>

        <div class="button-container right-side">
            <div class="form-group text-center">
                <button type="submit" class="form-btn">Confirm</button>
                <a asp-controller="BillPay" asp-action="Create" class="cancel-button">Cancel</a>
            </div>
        </div>
    </form>
</div>