
@model McbaExample.Models.Login
@{
    ViewData["Title"] = "Login";
}

<div class="container h-100">
    <div class="row h-100">
        <div class="col-md-6 left-side">
            <!-- This div will hold the background image -->
            <img src="~/img/login_side.jpg" alt="Login side" width="480px"/>
        </div>
        <div class="col-md-6 right-side d-flex align-items-center justify-content-center">
            <div>
                <h1 class="display-4">Login</h1>
                <form asp-action="Login">
                    <div class="form-group">
                        <label asp-for="LoginID" class="control-label"></label>
                        <input asp-for="LoginID" class="form-control" />
                        <span asp-validation-for="LoginID" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="Password" class="control-label">Password</label>
                        <input id="Password" name="Password" type="password" class="form-control"
                               data-val="true" data-val-required="The Password field is required." />
                        @Html.ValidationMessage("Password", new { @class = "text-danger" })
                    </div>
                    <div class="form-group button-spacing">
                        <input type="submit" value="Login" class="btn btn-primary" />
                    </div>
                    @Html.ValidationMessage("LoginFailed", new { @class = "text-danger" })
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
