@model IEnumerable<Assignment2.Models.Account>

@{
    ViewData["Title"] = "Select Account for Statement";

}

<h2>@ViewData["Title"]</h2>

<p>Please select an account to view the statement:</p>

@if (Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Account Number</th>
                <th>Type</th>
                <th>Balance</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var account in Model)
                {
                <tr>
                    <td>@account.AccountNumber</td>
                    <td>@(account.AccountType == "S" ? "Saving" : "Checking")</td>
                    <td>@account.Balance.ToString("C")</td>
                    <td>
                        <a asp-action="Statement"
                           asp-route-accountNumber="@account.AccountNumber"
                           class="btn btn-primary">View Statement</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>You do not have any accounts.</p>
}
