@using Assignment2.Utilities
@using McbaExample.Models
@model List<Transaction>  // Updated to use List<Transaction>

@{
    ViewData["Title"] = "Statement";
    var availableBalance = ViewBag.AvailableBalance;
    var currentPage = ViewBag.CurrentPage ?? 1;
    var totalPages = ViewBag.TotalPages ?? 1;
}

<h2>Statement</h2>
<h3>Available Balance: @availableBalance.ToString("C")</h3>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Transaction Type</th>
            <th>Destination</th>
            <th>Amount</th>
            <th>Time</th>
            <th>Comment</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var transaction in Model)
        {
            <tr>
                <td>@transaction.TransactionID</td>
                <td>@Enum.GetName(typeof(TransactionType), transaction.TransactionType)</td>
                <td>@(transaction.DestinationAccountNumber?.ToString() ?? "N/A")</td>
                <td>@transaction.Amount.ToString("C")</td>
                <td>@transaction.TransactionTimeUtc.ToString("dd/MM/yyyy hh:mm tt")</td>
                <td>@transaction.Comment</td>
            </tr>
        }
    </tbody>
</table>

<!-- Pagination logic remains the same -->

<a asp-action="Index">Back to Accounts</a>

@if (totalPages > 1)
{
    <nav>
        <ul class="pagination">
            <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                <a class="page-link" asp-action="Statement" asp-route-accountNumber="@ViewBag.AccountNumber" asp-route-page="@(currentPage - 1)">Previous</a>
            </li>
            @for (int i = 1; i <= totalPages; i++)
            {
                <li class="page-item @(i == currentPage ? "active" : "")">
                    <a class="page-link" asp-action="Statement" asp-route-accountNumber="@ViewBag.AccountNumber" asp-route-page="@i">@i</a>
                </li>
            }
            <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                <a class="page-link" asp-action="Statement" asp-route-accountNumber="@ViewBag.AccountNumber" asp-route-page="@(currentPage + 1)">Next</a>
            </li>
        </ul>
    </nav>
}


<a asp-action="Index">Back to Accounts</a>
