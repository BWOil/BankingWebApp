@model Assignment2.Models.Customer

<div class="mb-3">

    <form class="center-form">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group mb-3">
            <label for="OldPassword" class="control-label mb-1">Old Password</label>
            <input id="OldPassword" name="OldPassword" class="form-control mb-1"
                   data-val="true"
                   data-val-required="The old password field is required." />
            @Html.ValidationMessage("OldPassword", new { @class = "text-danger" })
        </div>

        <div class="form-group mb-3">
            <label for="NewPassword" class="control-label mb-1">New Password</label>
            <input id="NewPassword" name="NewPassword" class="form-control mb-1"
                   data-val="true"
                   data-val-required="The new password field is required." />
            @Html.ValidationMessage("NewPassword", new { @class = "text-danger" })
        </div>

        <div class="form-group mb-3">
            <label for="PasswordConfirm" class="control-label mb-1">Password Confirm</label>
            <input id="PasswordConfirm" name="PasswordConfirm" class="form-control mb-1"
                   data-val="true"
                   data-val-required="The new password confirm is required." />
            @Html.ValidationMessage("PasswordConfirm", new { @class = "text-danger" })
        </div>


        <div class="form-group mb-3">
            <input type="submit" value="Update Password" class="form-btn" />
        </div>
    </form>
</div>
