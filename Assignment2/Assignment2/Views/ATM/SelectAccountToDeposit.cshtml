using System;
namespace Assignment2.Views.Customer;

@model IEnumerable<Assignment2.Models.Account>

@{
    ViewData["Title"] = "Select Account to Deposit";
}

<h2>@ViewData["Title"]</h2>

@if (!Model.Any())
{
    <p>You do not have any accounts to display.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Account Number</th>
                <th>Type</th>
                <th>Balance</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var account in Model)
            {
                <tr>
                    <td>@account.AccountNumber</td>
                    <td>@account.AccountType</td>
                    <td>@account.Balance.ToString("C")</td>
                    <td>
                        <a asp-action="Deposit" asp-route-id="@account.AccountNumber" class="btn btn-primary">Deposit</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
